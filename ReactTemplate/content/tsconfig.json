{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./typings",
    "lib": ["dom", "es7"]
  },
  "include": ["client/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
